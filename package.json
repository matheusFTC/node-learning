{
  "name": "node-learning",
  "version": "0.0.1",
  "description": "Curso Do Zero a Produção: Aprenda a Construir uma API Node.js com TypeScript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "ts-node-dev 'src/index.ts'",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "test": "yarn test:unit && yarn test:functional",
    "test:unit": "jest",
    "test:functional": "jest --projects ./test --runInBand",
    "validate": "yarn lint:fix && yarn style:fix && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheusFTC/node-learning.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Matheus Filipe T. Chaves <matheus.02468@gmail.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/matheusFTC/node-learning/issues"
  },
  "homepage": "https://github.com/matheusFTC/node-learning#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.36",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/module-alias": "^2.0.0",
    "@types/mongoose": "^5.10.1",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "nock": "^13.0.5",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "@types/express": "^4.17.8",
    "axios": "^0.21.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^5.10.18"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    }
  }
}
